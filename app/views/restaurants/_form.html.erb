<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :specialities %>
  <%= f.text_field :specialities %>
  <%= f.label :cuisine_id %>
  <%= f.select :cuisine_id, Cuisine.pluck(:name, :id), :include_blank => true %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.submit %>
<% end %>
