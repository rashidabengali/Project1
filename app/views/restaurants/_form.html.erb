<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true, :placeholder => "Restaurant Name" %>
  <%= f.label :location %>
  <%= f.text_field :location, :placeholder => "suburb name" %>
  <%= f.label :specialities %>
  <%= f.text_field :specialities, :placeholder => "dish names" %>
  <%= f.label :cuisine_id %>
  <%= f.select :cuisine_id, Cuisine.pluck(:name, :id), :include_blank => true %>
  <%= f.label :image %>
  <%= f.url_field :image, :placeholder => "http://" %>
  <%= f.submit %>
<% end %>
