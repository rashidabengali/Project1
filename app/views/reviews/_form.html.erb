<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 1, max: 5, :autofocus => true, :required => true, :placeholder => "1..5" %>
  <%= f.label :comment %>
  <%= f.text_field :comment, :placeholder => "type your review" %>
  <%= f.submit %>
<% end %>
